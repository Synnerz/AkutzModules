{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "./typings",
    "./modules/**/*.js"
  ],
  "exclude": [
    "./dist"
  ]
}